		"@repo/hono-helpers": "workspace:*",
		"@repo/send-mail": "workspace:*",
		"drizzle-orm": "^0.44.2",
		"hono": "^4.9.6",
		"inngest": "^3.40.1",
		"zod": "^4.0.2"
	},
	"devDependencies": {
		"@types/node": "^22.13.11",
		"tsdown": "^0.12.9",
		"tsx": "^4.19.2",
		"typescript": "^5.8.2"
	}
