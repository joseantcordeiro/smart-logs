{
	"name": "server",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc --noEmit",
		"clean": "rm -rf dist node_modules .turbo",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"config": "tsx src/lib/config/cli.ts",
		"config:generate": "pnpm run config generate",
		"config:show": "pnpm run config show",
		"config:validate": "pnpm run config validate",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js"
	},
	"dependencies": {
		"@better-auth/expo": "^1.3.4",
		"@graphql-tools/schema": "^10.0.25",
		"@graphql-tools/utils": "^10.9.1",
		"@hono/node-server": "^1.14.4",
		"@hono/swagger-ui": "^0.5.2",
		"@hono/trpc-server": "^0.4.0",
		"@hono/zod-openapi": "^1.1.0",
		"@repo/audit": "workspace:*",
		"@repo/audit-db": "workspace:*",
		"@repo/auth": "workspace:*",
		"@repo/hono-helpers": "workspace:*",
		"@repo/redis-client": "workspace:*",
		"@repo/send-mail": "workspace:*",
		"@trpc/client": "^11.4.2",
		"@trpc/server": "^11.4.2",
		"better-auth": "^1.3.4",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.44.2",
		"graphql": "^16.11.0",
		"graphql-subscriptions": "^3.0.0",
		"graphql-yoga": "^5.15.1",
		"hono": "^4.8.2",
		"ioredis": "5.6.1",
		"postgres": "^3.4.7",
		"zod": "^4.0.2"
	},
	"devDependencies": {
		"@types/graphql": "^14.5.0",
		"@types/node": "^22.13.11",
		"drizzle-kit": "^0.31.2",
		"tsdown": "^0.12.9",
		"tsx": "^4.19.2",
		"typescript": "^5.8.2"
	}
}
